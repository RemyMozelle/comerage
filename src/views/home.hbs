{{setVar "userId" user.id}}
{{#if user}}
<div class="col s8 offset-s2 m8 offset-m2">
  <h5>Bonjour {{user.nickname}}</h5>
  {{#each articles}}
  <div class="card horizontal">
    {{#ifCond ../userId user_id}}
    <div class="wrapp-btn">
      <a href="/edit/articles/{{id}}" class="btn-floating halfway-fab waves-effect waves-left blue edit-button"><i
          class="material-icons">create</i></a>
      <form method="post" action="/del/articles/{{id}}">
        <button class="btn-floating halfway-fab waves-effect waves-left red delete-button">
          <i class="material-icons">delete</i></a>
        </button>
      </form>
    </div>
    {{/ifCond}}
    <div class="card-stacked">
      <div class="card-content">
        <p>{{body}}</p>
      </div>
      <div class="card-action">
        <ul>
          <a href="/articles/{{id}}">Voir l'article</a>
          {{#each article_has_categories}}
          <span class=" badge new badge" data-badge-caption="">{{category.name}}</span>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  {{#each articles}}
  <div class="card horizontal">
    <div class="card-stacked">
      <div class="card-content">
        <p>{{body}}</p>
      </div>
      <div class="card-action">
        <ul>
          <li><a href="/articles/{{id}}">Voir l'article</a></li>
          {{#each article_has_categories}}
          <span class="badge new badge red" data-badge-caption="">{{category.name}}</span>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  {{/each}}
  {{/if}}


  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#test1">Test 1</a></li>
        <li class="tab col s3"><a class="active" href="#test2">Test 2</a></li>
        <li class="tab col s3 disabled"><a href="#test3">Disabled Tab</a></li>
        <li class="tab col s3"><a href="#test4">Test 4</a></li>
      </ul>
    </div>
    <div id="test1" class="col s12">Test 1</div>
    <div id="test2" class="col s12">Test 2</div>
    <div id="test3" class="col s12">Test 3</div>
    <div id="test4" class="col s12">Test 4</div>
  </div>