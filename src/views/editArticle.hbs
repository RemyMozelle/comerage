<div class="row">
  <h2 class="col s12 m6 offset-m3">Modfier un article</h2>
  <form method="POST" class="col s12">
    <div class="row">
      <div class="input-field col s12 m6 offset-m3">
        {{#each categories}}
        <p>
          <label>
            <input type="checkbox" value={{id}} name="categories" />
            <span>{{name}}</span>
          </label>
        </p>
        {{/each}}

      </div>
      <div class="input-field col s12 m6 offset-m3">
        <em id="nb_car_max" class="nb_car_max">il vous reste encore 200 carract√®res</em>
        <textarea id="body" class="materialize-textarea nb_car_max" name="body">{{article.body}}</textarea>
        <label for="body">Corps</label>
      </div>
      <div class="input-field col s12 m6 offset-m3">
        <p>
          <label>
            <input type="checkbox" name="publish" />
            <span>publier</span>

          </label><br>
          <span style="color:red">{{err}}</span><br>
        </p>
      </div>
      <div class="input-field col s12 m6 offset-m3">
        <button class="btn waves-effect waves-light send_restrict" type="submit">Modifier
          <i class="material-icons right ">send</i>
        </button>
      </div>
  </form>
</div>